# GitHub OAuth Configuration
# Create a GitHub OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# JWT Secret (generate a random string)
JWT_SECRET=your_random_jwt_secret_here

# OpenAI API Key (for AI explanations)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional fallback)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database (default for Docker Compose)
DATABASE_URL=postgresql://codecrypt:codecrypt_dev_password@localhost:5432/codecrypt

# Redis (default for Docker Compose)
REDIS_URL=redis://localhost:6379

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:4000
